<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Allow_No_Only_Provider_Tax_ID</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 NOT(ISNUMBER(Provider_Tax_ID__c )), 
NOT(ISBLANK(Provider_Tax_ID__c ))
)</errorConditionFormula>
    <errorDisplayField>Provider_Tax_ID__c</errorDisplayField>
    <errorMessage>Only numbers are allowed</errorMessage>
</ValidationRule>
