<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OPP008_New_Business_Opp_Type</fullName>
    <active>false</active>
    <errorConditionFormula>ISPICKVAL (Type, &quot;New Business&quot;) &amp;&amp;  NOT(ISPICKVAL(Account.Type, &#39;Prospect&#39;))</errorConditionFormula>
