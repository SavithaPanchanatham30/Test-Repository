<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>All_USABLE</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>cve__Benefit__c</field>
        <field>cve__BenefitAmount__c</field>
        <field>cve__BenefitStart__c</field>
        <field>cve__BenefitThrough__c</field>
        <field>cve__Claim__c</field>
        <field>cve__ClaimantInsured__c</field>
        <field>cve__DateOfDeath__c</field>
        <field>cve__DateOfAccident__c</field>
        <field>cve__DateOfDiagnosis__c</field>
        <field>cve__DateOfDisability__c</field>
        <field>cve__DateOfLoss__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Group_Disability_Review</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>cve__BenefitClaimed__c.cve__RecordTypeName__c</field>
                <operation>notEqual</operation>
                <value>CriticalIllness</value>
            </criteriaItems>
            <criteriaItems>
                <field>cve__BenefitClaimed__c.cve__RecordTypeName__c</field>
                <operation>notEqual</operation>
                <value>HospitalIndemnity</value>
            </criteriaItems>
            <criteriaItems>
                <field>cve__BenefitClaimed__c.cve__RecordTypeName__c</field>
                <operation>notEqual</operation>
                <value>Accident</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Assign to Group Disability Review</label>
        <name>Assign_to_Group_Disability_Review</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Supplemental_Claims_Review</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>IF( OR( cve__RecordTypeName__c == &#39;CriticalIllness&#39; ,
                cve__RecordTypeName__c == &#39;HospitalIndemnity&#39; , cve__RecordTypeName__c ==
                &#39;Accident&#39; ) , true, false)</formula>
        </entryCriteria>
        <label>Assign to Supplemental Review</label>
        <name>Assign_to_Supplemental_Review</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>cve__BenefitClaimed__c.cve__Status__c</field>
            <operation>equals</operation>
            <value>Submitted for Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approve_Benefit_Claim</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approved_Benefit_Claimed</name>
            <type>Task</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejected_Benefit_Claim</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected_Benefit_Claim</name>
            <type>Task</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Requesting_to_review_Benefit_Claimed</name>
            <type>Task</type>
        </action>
    </initialSubmissionActions>
    <label>Benefit Claimed Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
